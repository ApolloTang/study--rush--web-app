{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir":  "../../../../../dist",
    "rootDir": "../../../../../src",

    "jsx": "react",

    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,

    "types": [],

    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"]
  },
  "include": [
    "../../../../../src/**/*.ts",
    "../../../../../src/**/*.tsx",
    "../../../../../src/**/*.json"
    // in the above when composite is true we are required to include json
    // see: https://github.com/microsoft/TypeScript/issues/25636
  ]
}
